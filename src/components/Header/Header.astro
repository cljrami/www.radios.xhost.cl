import "animate.css";
---

<header class="-mt-20">
  <div
    class="bg-center bg-cover h-screen -mt-109"
    style="background-image: url(https://theempire.com/wp-content/uploads/2020/10/close-up-of-radio-microphone-in-radio-station.jpg);"
  >
    <div
      class="flex flex-col justify-center items-left full h-full bg-black bg-opacity-60 text-gray-50 px-12"
    >
      <h1
        class="text-slate-100 font-black text-8xl from-purple-600 via-pink-600 to-blue-600 bg-gradient-to-r bg-clip-text text-transparent"
      >
        Radios online
        <br />
        <p
          class="text-4xl /*animate__animated animate__bounce*/ font-extralight text-slate-50"
        >
          Contrala tu plan
        </p>
      </h1>
    </div>
  </div>
</header>
